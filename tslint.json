{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules"
  ],
  "project": "tsconfig.json",
  "allowJs": true,
  "typeCheck": true,
  "extensions": [
    ".ts",
    ".tsx"
  ],
  "rules": {
    "ordered-imports": [false],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsdoc-format": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty-interface": false,
    "no-eval": true,
    "no-empty": false,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-shadowed-variable": false,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-submodule-imports": false,
    "no-var-keyword": true,
    "prefer-object-spread": false,
    "space-before-function-paren": [
      true,
      "always"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace",
      "check-catch"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": [
      true
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "newline-per-chained-call": [
      1,
      {
        "ignoreChainWithDepth": 3
      }
    ],
    "no-implicit-coercion": [
      1
    ],
    "prefer-const": false,
    "max-len": [
      2,
      150,
      2
    ],
    "max-line-length": [true, 150],
    "camelcase": [
      1
    ],
    "no-lonely-if": [
      1
    ],
    "max-classes-per-file": [0],
    "no-global-assign": [
      "error"
    ],
    "no-shadow": [
      "error",
      {
        "builtinGlobals": false,
        "hoist": "all",
        "allow": []
      }
    ],
    "no-shadow-restricted-names": [
      2
    ],
    "no-native-reassign": [
      2
    ],
    "no-inner-declarations": [
      1
    ],
    "no-param-reassign": [
      0
    ],
    "no-var-requires" : false,
    "no-undefined": [
      0
    ],
    "consistent-return": [
      1
    ],
    "generator-star-spacing": [
      1
    ],
    "no-console": [
      false
    ],
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "quote-props": [
      1,
      "as-needed"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-mixed-operators": [
      1,
      {
        "groups": [
          [
            "&",
            "|",
            "^",
            "~",
            "<<",
            ">>",
            ">>>"
          ]
        ]
      }
    ],
    "no-extra-parens": [
      1,
      "all",
      {
        "nestedBinaryExpressions": false,
        "ignoreJSX": "multi-line"
      }
    ],
    "key-spacing": [
      "error",
      {
        "align": {
          "beforeColon": true,
          "afterColon": true,
          "on": "colon"
        }
      }
    ],
    "react/no-unused-prop-types": [
      0
    ],
    "no-multi-spaces": [
      0,
      {
        "exceptions": {
          "Property": true,
          "VariableDeclarator": true,
          "ImportDeclaration": true,
          "AssignmentExpression": true,
          "ObjectExpression": true
        }
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "after": true,
        "before": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-invalid-this": [
      false
    ],
    "only-arrow-functions": [
      false
    ],
    "forin": false,
    "new-cap": [
      1,
      {
        "capIsNew": false
      }
    ],
    "react/jsx-no-bind": [
      0
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "import/no-unresolved": [
      2,
      {
        "commonjs": true,
        "amd": true
      }
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      // "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ],
    "align": [
      true,
      // "arguments",
      "parameters",
      "statements",
      "members",
      // "elements"
    ],
    "member-ordering":[],
    "member-access": [false],
    "object-literal-sort-keys": false,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 1,
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        },
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "CallExpression": {
          "arguments": 1
        }
      }
    ],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "interface-name": false,
    "no-namespace": [
      true,
      "allow-declarations"
    ]
  }
}